@model MedicalOffice.Models.MedicalTrial
<form asp-controller="MedicalTrial" asp-action="Create" id="createMedicalTrialForm">
    <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="TrialName" class="control-label"></label>
                <textarea asp-for="TrialName" class="form-control"></textarea>
                <span asp-validation-for="TrialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="submitMedicalTrialCreate" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


